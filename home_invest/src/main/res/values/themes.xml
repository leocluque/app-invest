<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppInvest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MySeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumbTint">@color/indicator_progress</item>
        <item name="android:progressTint">@color/indicator_progress</item>
        <item name="android:tickMarkTint">@color/green</item>
    </style>
</resources>